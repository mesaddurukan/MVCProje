@using EsadMVCProje.Models.Sınıflar
@model List<Blog>

@foreach (var i in Model)
{

    <div class="bot-img">
        <img src="@i.BlokImage" style="width:125px; height:65px;" alt="" />
    </div>
    <div class="bot-desc1">
        <p>
            @if (i.Aciklama.Length < 50)
            {
                @i.Aciklama
            }
            else
            {
                @i.Aciklama.Substring(0, 50) <span>...</span>
            }
        </p>
    </div>
    <div class="clear"></div>

}
